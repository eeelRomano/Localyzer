@page
@model IndexModel
@{
    ViewData["Title"] = "Autoryzacja";
}

<div class="text-center">
    <h1 class="display-4" style="margin-top: 30px;">Logowanie</h1>
    <center>
    <form name="loginform" style="margin-top: 50px;" method="post">
        <table>
            <tr>
                <td>
                    <div>Login</div>
                </td>
                <td>
                    <input type="text" name="login" />
                </td>
            </tr>
            <tr>
                <td>
                    <div>Hasło</div>
                </td>
                <td>
                    <input type="password" name="password" />
                </td>
            </tr>
            <tr >
                <td></td>
                    <td><input type="submit" value="Zaloguj się" style="margin-top: 50px;"/></td>
            </tr>
        </table>
    </form>
    </center>
    <p style="margin-top: 30px;">Nie masz konta? <a href="/Register">Zarejestruj się już dziś</a>.</p>
</div>
